@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<!-- create a calculator here -->
<form method="post">
    <input type ="number" step= "any" name="num1" id="num1" placeholder="Enter first number" style="width: 150px; height: 30px; margin-right: 10px;">
    <select id="operation" name="operation" style="width: 100px; height: 30px; margin-left: 10px;">
        <option value="+">+</option>
        <option value="-">-</option>
        <option value="x">x</option>
        <option value="/">/</option>
    </select>
    <input type ="number" step= "any"  name="num2" id="num1" placeholder="Enter second number" style="width: 150px; height: 30px; margin-right: 10px;">

    <button type ="button">Calculate</button>
    
</form>

@if (Model.result.HasValue)
{
    <p>Result = @Model.result.Value.ToString()</p>
}
