@page
@model HRMModel
@{
    ViewData["Title"] = "Human Resource Management";
}

<!-- HRM Page Content -->
<div class="text-center">
    <h1 style="font-size: 29px; margin-bottom: 22px">Human Resource Management</h1>
    <label for="department" style="font-size: 20px; margin-right: 10px;">Select Department:</label>
    <select id="department" name="department" style="width: 200px; height: 30px; margin: 10px;">
        <option value="HR">Human Resources</option>
        <option value="Finance">Finance</option>
        <option value="Sales">Sales</option>
        <option value="IT">Information Technology</option>
    </select>

    <!-- Employee Table -->
    <table class="table table-striped" style="margin: 20px auto; width: 80%;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Department</th>
                <th>Salary</th>
            </tr>
        </thead>
        <tbody>
            <!-- Sample Data -->
            <tr>
                <td>John Doe</td>
                <td>Manager</td>
                <td>Human Resources</td>
            </tr>
            <tr>
                <td>Jane Smith</td>
                <td>Accountant</td>
                <td>Finance</td>
            </tr>
        </tbody>
    </table>

    <!-- Key Metrics Cards -->
    <section class="cards" aria-label="Key Metrics">
        <article class="card">3<h3>Employees</h3></article>
        <article class="card">4<h3>Departments</h3></article>
        <article class="card">70,000<h3>Avg Salary</h3></article>
        <article class="card">0<h3>Payroll</h3></article>
    </section>
</div>